<% include ./partials/header.ejs %>

<div class="ui main text container segment">
        <div class="ui huge header">Edit Post</div>
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label for="">Title</label>
                <input type="text" name="blog[title]" id="" value="<%= blog.title %>">
            </div>
            <div class="field">
                <label for="">Image</label>
                <input type="text" name="blog[image]" id="" value="<%= blog.image %>">
            </div>
            <div class="field">
                <label for="">Blog Content</label>
                <textarea name="blog[body]" id="" cols="30" rows="10" required><%= blog.body %></textarea>
            </div>
            <input type="submit" value="Submit" class="ui blue button">
        </form>
    </div>

<% include ./partials/footer.ejs %>